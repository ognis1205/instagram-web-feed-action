{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
  },
  "include": [
    "**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ],
  "typeRoots": [
    "./src/@types",
    "./node_modules/@types",
  ],
  "paths": {
    "*": [
      "src/@types/*",
      "node_modules/*",
    ]
  },
}
